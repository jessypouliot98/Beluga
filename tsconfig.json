{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"baseUrl": "./src",
		"outDir": "./dist",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"jsx": "react",
		"lib": [
			"esnext",
			"dom"
		],
		"forceConsistentCasingInFileNames": false
	},
	"exclude": [
		"node_modules",
		"dist"
	]
}
